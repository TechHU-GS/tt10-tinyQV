IOBUF  PORT "uo_out[1]" IO_TYPE=LVCMOS33;
IOBUF  PORT "uo_out[2]" IO_TYPE=LVCMOS33;
IOBUF  PORT "uo_out[3]" IO_TYPE=LVCMOS33;
