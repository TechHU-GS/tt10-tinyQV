LOCATE COMP "uo_out[1]" SITE "B3";
LOCATE COMP "uo_out[2]" SITE "A2";
LOCATE COMP "uo_out[3]" SITE "B2";
LOCATE COMP "uo_out[4]" SITE "A1";
LOCATE COMP "uo_out[5]" SITE "C1";
LOCATE COMP "uo_out[6]" SITE "D1";
LOCATE COMP "uo_out[7]" SITE "E1";
